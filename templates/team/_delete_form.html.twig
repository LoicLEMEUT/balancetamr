<form method="post" action="{{ path('team_delete', {'id': team.id}) }}" onsubmit="return confirm({{ "team.action.delete" | trans | capitalize }});">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ team.id) }}">
    <button class="btn">{{ "action.delete" | trans | capitalize }}</button>
</form>
